<h1 class="title">Jared's Sports Burger Bar</h1>

<h2 class= "title">Burgers Ready to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      <li>{{name}}
        <button class="change-eat" data-id="{{id}}">
          Eat da burger
	</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2 class="title">Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      <li>

      {{name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2 class="title">Make a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger to Tray</button>
</form>
